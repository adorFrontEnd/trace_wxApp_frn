checkbox .wx-checkbox-input {
  border-radius: 3rpx;
  height: 26rpx;
  width: 26rpx;
  margin-top: -4rpx;
  border: 1rpx solid #ccc;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
  background-color: #ff8716;
  border: 1rpx solid #ff8716;
}

checkbox.round .wx-checkbox-input {
  height: 26rpx;
  width: 26rpx;
}

checkbox.round-md .wx-checkbox-input {
  height: 32rpx;
  width: 32rpx;
}

checkbox.round-lg .wx-checkbox-input {
  height: 38rpx;
  width: 38rpx;
}

checkbox.round .wx-checkbox-input, checkbox.round-md .wx-checkbox-input,
checkbox.round-lg .wx-checkbox-input {
  margin-top: -4rpx;
  border: 1rpx solid #ccc;
  border-radius: 50%;
}

checkbox.round .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 22rpx;
}

checkbox.round-md .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
}

checkbox.round-lg .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}

checkbox.round .wx-checkbox-input.wx-checkbox-input-checked::before,
checkbox.round-md .wx-checkbox-input.wx-checkbox-input-checked::before,
checkbox.round-lg .wx-checkbox-input.wx-checkbox-input-checked::before {
  text-align: center;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
  background-color: #ff8716;
  border: 1rpx solid #ff8716;
  border-radius: 50%;
}

.theme-input {
  border: 1px solid #ff8716;
  background-color: transparent;
  border-radius: 3px;
  height: 28px;
  padding: 4px 10px;
  color: #ff8716;
  line-height: 20px;
}



