/* pages/agency/agency.wxss */

.them {
  min-height: 100vh;
  background: #f2f2f2;
  padding: 10px;
  position: relative;
}

.list-img {
  height: 112px;
  width: 90px;
  margin-right: 10px;
  position: relative;
}

.box {
  width: 50px;
  height: 50px;
  margin: 10px 0 0 15px;
}

.list {
  display: flex;
  background: #fff;
  padding: 10px 0 10px 10px;
  margin-bottom: 10px;
  border: 1px solid #d7d7d7;
  position: relative;
  width: 100%;
}

.lastlist {
  display: flex;
  background: #fff;
  padding: 10px;
  margin-bottom: 40px;
}

.item {
  font-size: 16px;
  height: 112px;
  word-wrap: break-word;
  width: 65%;
}

.clickbtn {
  display: flex;
  height: 50px;
  width: 95%;
  line-height: 50px;
  position: fixed;
  bottom: 10px;
}

.open {
  position: absolute;
  bottom: 0px;
  left: 0px;
  text-align: center;
  width: 100%;
  background: #f2f2f2;
  color: #8f8f8f;
  height: 25px;
  line-height: 25px;
}

.commomstyle {
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 14px;
  background: #09f;
}

.clickAdd {
  border: 1px dashed #d7d7d7;
  padding: 10px 0;
  text-align: center;
  color: #d1d1d1;
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 70px;
}

.close {
  position: absolute;
  top: 5px;
  right: 5px;
}


